<h1>Bikers Revenge!: Listing Reports</h1>

<table>
  <tr>
    <th>Location</th>
    <th>Time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reports.each do |report| %>
  <tr>
    <td><%= report.location %></td>
    <td><%= report.time %></td>
    <td><%= link_to 'Show Report', report %></td>
    <td><%= link_to 'Edit Report', edit_report_path(report) %></td>
    <td><%= link_to 'Delete Report', report, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

